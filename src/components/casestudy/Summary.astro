---
const { type, semester, year, shortSummary } = Astro.props;
---

<section
  class="w-full min-h-64 hidden md:flex flex-col my-12 gap-4 p-8 bg-foreground border border-border rounded"
>
  <h2 class="text-2xl font-bold">tl;dr</h2>
  <div class="flex items-center gap-12 py-2 border-b">
    <p>Type:</p>
    <p>{type}</p>
  </div>
  <div class="flex items-center gap-12 py-2 border-b">
    <p>Semester:</p>
    <p>{semester}</p>
  </div>
  <div class="flex items-center gap-12 py-2 border-b">
    <p>Year:</p>
    <p>{year}</p>
  </div>
  <div class="flex items-center gap-12 py-2 border-b">
    <p>Short Summary:</p>
    <p>
      {shortSummary}
    </p>
  </div>
</section>
